<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1.0"
    android:background="#ffffff"
    >
  <TextView
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:layout_weight="0.0"
  	android:text="@string/KEY_SHOUT_BTN_TITLE"
  	android:textColor="#ffffffff"
  	android:background="#aaaaff"
  	android:textSize="40sp"
  	android:textStyle="bold"
  	android:paddingLeft="10px"
  	android:paddingBottom="0px"  	
  	android:layout_gravity="center_horizontal"
  	 />
	<LinearLayout
  		xmlns:android="http://schemas.android.com/apk/res/android"
  		android:layout_width="fill_parent"
  		android:layout_height="0dip"
  		android:layout_weight="0.8"
  		android:orientation="horizontal"
  		android:padding="10px"
  		android:weightSum="1.0"
  		android:id="@+id/panicMsgHolder">
		<TextView
  			android:layout_width="0dip"
  			android:layout_weight="0.7"
  			android:layout_height="wrap_content"
  			android:textColor="#000000"
  			android:textSize="26px"
  			android:text="@string/KEY_SHOUT_PANICMSG_TITLE"
  			android:id="@+id/panicMsg" />
		<Button
  			android:layout_width="0dip"
  			android:layout_weight="0.3"
  			android:layout_height="wrap_content"
  			android:text="@string/KEY_SHOUT_CHANGEPANICMSG_BTN"
  			android:id="@+id/changePanicMsg_btn" />  	
  	</LinearLayout>

	<Button
  		android:layout_width="fill_parent"
  		android:layout_height="70sp"
  		android:layout_weight="0.15"
  		android:layout_margin="10px"
  		android:textSize="16pt"
  		android:drawableLeft="@drawable/shout"
  		android:text="@string/KEY_SHOUT_BTN_TITLE"
  		android:id="@+id/shoutBtn" />
</LinearLayout>
